---

<section class="max-w-md mx-auto bg-white p-8 rounded shadow-md">
    <h2 class="text-2xl font-bold mb-4">Subscribe to our Newsletter</h2>
    <form action="#" method="POST">
      <div class="mb-4">
        <label for="email" class="block text-gray-700">Email address</label>
        <input type="email" class="w-full px-4 py-2 rounded border-gray-300 focus:border-blue-500 focus:outline-none" id="email" name="email" placeholder="Enter your email" required>
      </div>
      <div class="mb-4">
        <label for="country" class="block text-gray-700">Country</label>
        <select id="country" name="country" class="w-full px-4 py-2 rounded border-gray-300 focus:border-blue-500 focus:outline-none">
          <option value="" disabled selected>Select your country</option>
          <option value="us">United States</option>
          <option value="ca">Canada</option>
          <option value="uk">United Kingdom</option>
          <option value="hon">Honduras</option>
        </select>
      </div>
      <div class="mb-4">
        <input type="checkbox" class="mr-2 leading-tight" id="consent" name="consent" required>
        <label for="consent" class="text-gray-300">I consent to receive newsletters</label>
      </div>

      <button type="submit" id="subscribeBtn" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition duration-300 subscribe">Subscribe</button>
    </form>
  </section>
  <script>
    const buttons = document.querySelectorAll('button.subscribe');

    buttons.forEach((button) => {
      button.addEventListener('click', () => {
